FROM node:16.13.1-alpine

ARG WORKDIR
ARG CONTAINER_PORT
ARG API_URL

ENV HOME=/${WORKDIR} \
    LANG=C.UTF-8 \
    TZ=Asia/Tokyo \
    HOST=0.0.0.0 \
    API_URL=${API_URL}

# ENV check
RUN echo HOME:${HOME}
RUN echo CONTAINER_PORT:${CONTAINER_PORT}
RUN echo API_URL:${API_URL}

WORKDIR ${HOME}

EXPOSE ${CONTAINER_PORT}
